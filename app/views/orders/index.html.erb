<h1>Listing orders</h1>

<table>
  <tr>
    <th>From loc</th>
    <th>To loc</th>
    <th>Requested time</th>
    <th>Desc</th>
    <th>Weight</th>
    <th>Package type</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.from_loc %></td>
    <td><%= order.to_loc %></td>
    <td><%= order.requested_time %></td>
    <td><%= order.desc %></td>
    <td><%= order.weight %></td>
    <td><%= order.package_type %></td>
    <td><%= order.type %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

